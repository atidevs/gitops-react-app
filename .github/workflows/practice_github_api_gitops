name: interact with Github API
on: 
  pull_request:

jobs:
  create-issue:
    runs-on: ubuntu-latest
    permissions:
      contents: read
      issues: write
    steps:
      - name: Create issue
        run: |
          gh issue --repo ${{ github.repository }} \
            create --title "Interact with github API" --body "Add interaction with github API to automoate issue creation upon pull request creation!"
        env:
          GH_TOKEN: ${{ secrets.GITHUB_TKOEN }}
